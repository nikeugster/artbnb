
<div class="container">
  <div class="dashboard-art-collection">
    <h3>Your art:</h3>
    <% arts = Art.where("user_id = #{current_user.id}") %>
    <p><em><%= "Nothing here yet..." if arts.empty? %></em></p>
    <% arts.each do |art| %>
      <div class="card-product mb-3 col-12">
        <div class="img-container">
          <%= image_tag art.picture, alt: art.title %>
        </div>
        <div class="card-product-infos">
          <div>
            <h2><%= link_to art.title, art_path(art.id) %></h2>
            <p><em> <%= art.artist %></em></p>
            <p><%= art.description %></p>
          </div>
          <div class="card-product-align-right">
            <h2 class="card-product-pricing"><%= art.price %>â‚¬ / day</h2>
            <div class="bg-warning">You have a pending booking request!</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



